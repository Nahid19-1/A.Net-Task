@model List<news_task.Models.Database.News>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Catagory</th>
        <th>PublishDate</th>
        <th>Description</th>
        <th>Edit</th>
        <th>Delete</th>

    </tr>
    @foreach (var n in Model)
    {
        <tr>

            <td>@n.Id</td>
            <td>@n.Title</td>
            <td>@n.Catagory</td>
            <td>@n.PublishDate</td>
            <td>@n.Description</td>
            <td><a href="/News/Edit/@n.Id" class="btn btn-success">Edit</a> </td>
            <td><a href="/News/Delete/@n.Id" class="btn btn-danger">Delete</a> </td>

        </tr>
    }
</table>